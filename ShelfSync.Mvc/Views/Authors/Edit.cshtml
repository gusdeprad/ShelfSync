@model ShelfSync.Mvc.Models.ViewModels.AuthorViewModel
@{
    ViewData["Title"] = "Edit Author";
    var allBooks = ViewData["Books"] as List<ShelfSync.Mvc.Models.Entities.Book> ?? new List<ShelfSync.Mvc.Models.Entities.Book>();
    var selected = Model.BookIds ?? new List<Guid>();
}

<h1>Edit Author</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Books</label>
        <div>
        @foreach (var b in allBooks)
        {
            var isChecked = selected.Contains(b.Id) ? "checked" : "";
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name="BookIds" value="@b.Id" id="book_@b.Id" @isChecked />
                <label class="form-check-label" for="book_@b.Id">@b.Title</label>
            </div>
        }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}